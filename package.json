{
  "name": "@mxp-protocol/core",
  "version": "0.1.1",
  "type": "module",
  "description": "MXP (Mesh eXchange Protocol) - High-performance binary protocol for AI agent communication",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./a2a": {
      "types": "./dist/a2a/index.d.ts",
      "import": "./dist/a2a/index.js",
      "require": "./dist/a2a/index.cjs"
    },
    "./transport": {
      "types": "./dist/transport/index.d.ts",
      "import": "./dist/transport/index.js",
      "require": "./dist/transport/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE-MIT",
    "LICENSE-APACHE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "check": "pnpm typecheck && pnpm lint && pnpm test && pnpm build",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "mxp",
    "protocol",
    "ai-agents",
    "a2a",
    "agent-to-agent",
    "binary-protocol",
    "high-performance",
    "llm",
    "streaming",
    "distributed-tracing"
  ],
  "author": "YafaTek <protocol@getmxp.xyz>",
  "license": "(MIT OR Apache-2.0)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yafatek/mxp-js.git"
  },
  "bugs": {
    "url": "https://github.com/yafatek/mxp-js/issues"
  },
  "homepage": "https://getmxp.xyz",
  "packageManager": "pnpm@9.14.2",
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/node": "^22.10.0",
    "eslint": "^9.15.0",
    "prettier": "^3.4.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0",
    "vitest": "^2.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "uuid": "^13.0.0"
  }
}
